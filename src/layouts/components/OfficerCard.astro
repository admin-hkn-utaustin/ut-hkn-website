---
import { plainify } from "@/lib/utils/textConverter";
import { Image } from "@astrojs/image/components";
import Social from "./Social.astro";

const { data } = Astro.props;
const { name, image, position, email } = data;
---

<div
  class="rounded bg-theme-light p-8 text-center dark:bg-darkmode-theme-light"
>
  {
    image && (
      <Image
        class="mx-auto mb-6 rounded"
        src={image}
        alt={name}
        width={170}
        height={170}
        format="webp"
      />
    )
  }
  <h4 class="mb-3">
    <!-- <a href={`/authors/${data.slug}`}>{title}</a> -->
    {name}
  </h4>
  <p class="mb-4">
    <!-- {plainify(data.body?.slice(0, 100))} -->
    {position}
    <a href={`mailto:${email}`} class="block text-theme-primary">
      {email}
    </a>
  </p>
  <!-- <Social source={social} className="social-icons" /> -->
</div>
